<resources>
    <!-- Base application theme. -->
    <style name="Theme.SIPaddy" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="edit_text_background">@color/edit_text_bg</item>
        <item name="item_foreground">@color/neutral_600</item>
        <item name="header_container_background">@color/green_500</item>
    </style>


    <style name="BackButton" parent="Widget.AppCompat.ImageButton">
        <item name="tint">@color/green_500</item>
        <item name="android:background">#00000000</item>
    </style>

    <style name="TextSubHeading" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/neutral_500</item>
    </style>

    <style name="EditText">
        <item name="android:background">@drawable/bg_edit_text</item>
        <item name="android:paddingStart">@dimen/dp_16</item>
        <item name="android:paddingEnd">@dimen/dp_16</item>
    </style>

    <style name="PrimaryButton" parent="Widget.Material3.Button">
        <item name="cornerRadius">@dimen/dp_15</item>
        <item name="fontFamily">@font/noto_sans_semibold</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>