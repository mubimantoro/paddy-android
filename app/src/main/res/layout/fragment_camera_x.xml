<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".presentation.home.camera.CameraXFragment">

    <!-- Camera Preview -->
    <androidx.camera.view.PreviewView
        android:id="@+id/previewView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Capture Overlay (Flash effect) -->
    <View
        android:id="@+id/captureOverlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/white"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Top Controls Container -->
    <LinearLayout
        android:id="@+id/topControls"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Close Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/closeBtn"
            style="@style/Widget.Material3.Button.IconButton.Filled.Tonal"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:backgroundTint="#80000000"
            app:icon="@drawable/ic_close"
            app:iconTint="@android:color/white" />

    </LinearLayout>

    <View
        android:id="@+id/gridOverlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/ic_camera_grid"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@id/bottomControls"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topControls" />

    <!-- Bottom Controls Container -->
    <LinearLayout
        android:id="@+id/bottomControls"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Instruction Text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:background="#80000000"
            android:gravity="center"
            android:padding="12dp"
            android:text="@string/camera_x_instruction_label"
            android:textAppearance="?attr/textAppearanceBodyMedium"
            android:textColor="@android:color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="3">

            <!-- Gallery Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/galleryBtn"
                style="@style/Widget.Material3.Button.IconButton.Filled.Tonal"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:visibility="gone"
                app:backgroundTint="#80000000"
                app:icon="@drawable/ic_image_placeholder"
                app:iconTint="@android:color/white"
                tools:visibility="visible" />

            <!-- Capture Button -->
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/captureBtn"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:contentDescription="@string/capture_photo_label"
                app:backgroundTint="?attr/colorPrimary"
                app:borderWidth="4dp"
                app:elevation="0dp"
                app:fabCustomSize="80dp"
                app:maxImageSize="40dp"
                app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Full"
                app:srcCompat="@drawable/ic_camera_capture"
                app:tint="@android:color/white" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/switchCameraBtn"
                style="@style/Widget.Material3.Button.IconButton.Filled.Tonal"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                app:backgroundTint="#80000000"
                app:icon="@drawable/ic_switch_camera"
                app:iconTint="@android:color/white" />


        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>