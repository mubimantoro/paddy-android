<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.popt.detail.PoptDetailPengaduanTanamanFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsingToolbar"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:collapsedTitleTextColor="@color/white"
            app:contentScrim="@color/green_500"
            app:expandedTitleMarginEnd="@dimen/dp_60"
            app:expandedTitleMarginStart="@dimen/dp_16"
            app:expandedTitleTextColor="@color/white"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:title="@string/detail_pengaduan_tanaman_title_label"
            app:titleEnabled="true">

            <ImageView
                android:id="@+id/pengaduanTanamanIv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/plant_image_label"
                android:scaleType="centerCrop"
                app:layout_collapseMode="parallax"
                tools:src="@drawable/sample_scan" />

            <View
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="bottom"
                android:background="@drawable/bg_gradient_overlay" />

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:navigationIcon="@drawable/ic_arrow_left_alt"
                app:navigationIconTint="@color/white" />

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dp_16">

            <!-- Status Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_16">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp_16">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/noto_sans"
                            android:text="@string/status_label"
                            android:textSize="@dimen/sp_12" />

                        <TextView
                            android:id="@+id/statusTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_4"
                            android:fontFamily="@font/noto_sans_bold"
                            android:paddingHorizontal="@dimen/dp_12"
                            android:paddingVertical="@dimen/dp_6"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_13"
                            tools:text="Pending" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/noto_sans"
                            android:text="@string/tanggal_laporan_label"
                            android:textSize="@dimen/sp_12" />

                        <TextView
                            android:id="@+id/createdDateTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_4"
                            android:fontFamily="@font/noto_sans_semibold"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_14"
                            tools:text="15 Okt 2025" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Verification/Report Card (Only visible when status is "Selesai") -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/downloadReportCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_16"
                android:visibility="gone"
                app:cardBackgroundColor="@color/green_50"
                app:strokeColor="@color/green_500"
                app:strokeWidth="1dp"
                tools:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_16">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:contentDescription="@string/icon_label"
                            android:padding="@dimen/dp_12"
                            android:src="@drawable/ic_check"
                            app:tint="@color/white" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_12"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/noto_sans_bold"
                                android:text="@string/hasil_pemeriksaan_tanaman_label"
                                android:textColor="@color/green_700"
                                android:textSize="@dimen/sp_16" />

                            <TextView
                                android:id="@+id/verificationDateTv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_2"
                                android:fontFamily="@font/noto_sans"
                                android:textColor="@color/green_600"
                                android:textSize="@dimen/sp_12"
                                tools:text="Diverifikasi pada 12 Nov 2025" />

                            <TextView
                                android:id="@+id/verifierNameTv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_2"
                                android:fontFamily="@font/noto_sans"
                                android:textColor="@color/green_600"
                                android:textSize="@dimen/sp_12"
                                tools:text="oleh: Petugas POPT" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- POPT Notes Section -->
                    <LinearLayout
                        android:id="@+id/catatanPoptContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_12"
                        android:background="@drawable/rounded_corner_bg"
                        android:backgroundTint="@color/white"
                        android:orientation="vertical"
                        android:padding="@dimen/dp_12"
                        android:visibility="gone"
                        tools:visibility="visible">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/noto_sans_bold"
                            android:text="@string/catatan_popt_label"
                            android:textColor="@color/green_700"
                            android:textSize="@dimen/sp_13" />

                        <TextView
                            android:id="@+id/catatanPoptTv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_4"
                            android:fontFamily="@font/noto_sans"
                            android:lineSpacingExtra="@dimen/dp_2"
                            android:textColor="@color/green_800"
                            android:textSize="@dimen/sp_13"
                            tools:text="Telah dilakukan pemeriksaan lapangan. Tanaman terserang hama wereng coklat dengan tingkat serangan sedang. Disarankan penyemprotan insektisida dan pemantauan rutin." />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginVertical="@dimen/dp_12"
                        android:background="@color/green_200" />

                    <Button
                        android:id="@+id/downloadReportBtn"
                        style="@style/Widget.Material3.Button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/green_500"
                        android:fontFamily="@font/noto_sans_bold"
                        android:paddingVertical="@dimen/dp_12"
                        android:text="@string/download_file_label"
                        android:textColor="@color/white"
                        app:icon="@drawable/ic_download"
                        app:iconGravity="textStart"
                        app:iconTint="@color/white" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- User Pelapor -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/userPelaporContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_16"
                android:visibility="gone"
                tools:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_16">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/noto_sans_bold"
                        android:text="@string/informasi_pelapor_label"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_16" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginVertical="@dimen/dp_12"
                        android:background="@color/black" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:contentDescription="@string/icon_label"
                            android:src="@drawable/ic_person"
                            app:tint="@color/green_500" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_12"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/noto_sans"
                                android:text="@string/nama_pelapor_label"
                                android:textSize="@dimen/sp_12" />

                            <TextView
                                android:id="@+id/userNameTv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_2"
                                android:fontFamily="@font/noto_sans_semibold"
                                android:textColor="@color/black"
                                android:textSize="@dimen/sp_14"
                                tools:text="Bimantoro" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Kelompok Tani Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_16">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_16">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/noto_sans_bold"
                        android:text="@string/informasi_kelompok_tani_label"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_16" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginVertical="@dimen/dp_12"
                        android:background="@color/black" />

                    <!-- Kelompok Tani Name -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_12"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:contentDescription="@string/icon_label"
                            android:src="@drawable/ic_group"
                            app:tint="@color/green_500" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_12"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/noto_sans"
                                android:text="@string/nama_kelompok_tani_label"
                                android:textSize="@dimen/sp_12" />

                            <TextView
                                android:id="@+id/kelompokTaniTv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_2"
                                android:fontFamily="@font/noto_sans_semibold"
                                android:textColor="@color/black"
                                android:textSize="@dimen/sp_14"
                                tools:text="Kelompok Tani Sejahtera" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Location -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:contentDescription="@string/icon_label"
                            android:src="@drawable/ic_location"
                            app:tint="@color/green_500" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_12"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/noto_sans"
                                android:text="@string/lokasi_label"
                                android:textSize="@dimen/sp_12" />

                            <TextView
                                android:id="@+id/alamatTv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_2"
                                android:fontFamily="@font/noto_sans"
                                android:textColor="@color/black"
                                android:textSize="@dimen/sp_14"
                                tools:text="Jl. Raya Limboto No. 123" />

                            <TextView
                                android:id="@+id/kecamatanKabupatenTv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_2"
                                android:fontFamily="@font/noto_sans"
                                android:textSize="@dimen/sp_13"
                                tools:text="Kec. Limboto, Kab. Gorontalo" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Description Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_16">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_16">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/noto_sans_bold"
                        android:text="@string/description_label"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_16" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginVertical="@dimen/dp_12"
                        android:background="@color/black" />

                    <TextView
                        android:id="@+id/descriptionTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/noto_sans"
                        android:lineSpacingExtra="@dimen/dp_4"
                        android:textSize="@dimen/sp_14"
                        tools:text="Tanaman padi di area sawah kami mengalami serangan hama wereng yang cukup parah. Banyak tanaman yang sudah menguning dan pertumbuhannya terhambat." />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Map Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_16">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/noto_sans_bold"
                        android:text="@string/koordinat_lokasi_label"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_16" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginVertical="@dimen/dp_12"
                        android:background="@color/black" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/noto_sans"
                                android:text="@string/latitude_label"
                                android:textSize="@dimen/sp_12" />

                            <TextView
                                android:id="@+id/latitudeTv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_4"
                                android:fontFamily="@font/noto_sans_semibold"
                                android:textColor="@color/black"
                                android:textSize="@dimen/sp_14"
                                tools:text="0.5435" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/noto_sans"
                                android:text="@string/longitude_label"
                                android:textSize="@dimen/sp_12" />

                            <TextView
                                android:id="@+id/longitudeTv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_4"
                                android:fontFamily="@font/noto_sans_semibold"
                                android:textColor="@color/black"
                                android:textSize="@dimen/sp_14"
                                tools:text="123.0583" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Open Map Button -->
                    <Button
                        android:id="@+id/openMapBtn"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_16"
                        android:fontFamily="@font/noto_sans_semibold"
                        android:text="@string/open_in_maps_label"
                        android:textColor="@color/green_500"
                        app:icon="@drawable/ic_location"
                        app:iconGravity="textStart"
                        app:iconTint="@color/green_500"
                        app:strokeColor="@color/green_500" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        tools:visibility="visible" />


</androidx.coordinatorlayout.widget.CoordinatorLayout>